<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:background="#CFD8DC"
        android:orientation="horizontal">

        <TextView
            style="@style/published_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date" />

        <TextView
            android:id="@+id/article_date1"
            style="@style/published_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/article_date1" />

        <TextView
            android:id="@+id/article_date2"
            style="@style/published_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/article_date2" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="#ECEFF1"
        android:orientation="vertical">

        <TextView
            style="@style/item_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title" />

        <TextView
            android:id="@+id/article_title"
            style="@style/item_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/article_headline" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#CFD8DC"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <TextView
            style="@style/item_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section" />

        <TextView
            android:id="@+id/section_name"
            style="@style/item_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section_name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ECEFF1"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <TextView
            style="@style/item_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/author" />

        <TextView
            android:id="@+id/author_name"
            style="@style/item_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/author_name" />
    </LinearLayout>

</LinearLayout>